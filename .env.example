# Database Configuration
MONGO_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemma-3-27b-it
AI_FAST_PATH_ENABLED=false
LLM_ROUTER_MIN_CONFIDENCE=0.55

# Security (Required)
# Generate a secure key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change_this_to_a_secure_random_string

# Admin Access
ADMIN_PASSWORD=your_admin_password_here

# RAG Configuration (Optional Tuning)
RAG_FAST_CONFIDENCE=0.72
RAG_REWRITE_TRIGGER=0.68
RAG_RERANK_TRIGGER=0.82
RAG_MAX_TOTAL_QUERIES=3

# Semantic Router (MongoDB Vector Search)
SEMANTIC_ROUTER_ENABLED=true
SEMANTIC_ROUTER_COLLECTION=semantic_intents
SEMANTIC_ROUTER_INDEX=semantic_intent_vector_idx
SEMANTIC_ROUTER_MIN_CONFIDENCE=0.50

# Legacy Collection Fallbacks (default: disabled)
USE_LEGACY_FEEDBACK_COLLECTION=false
USE_LEGACY_QA_COLLECTIONS=false
